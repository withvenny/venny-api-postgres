RewriteEngine on
RewriteCond %{REQUEST_URI} !app
RewriteRule (.*) app/$1 [L]

# Include path for localhost
php_value include_path ".:/Library/WebServer/Documents/api.stocks.venny.io/app:/Library/WebServer/Documents/api.stocks.venny.io/app/v1:/Library/WebServer/Documents/api.stocks.venny.io/vendor"

# keeps root directory file paths hidden
